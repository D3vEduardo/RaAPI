{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 23",
  "_version": "23.0.0",
  "compilerOptions": {
    "lib": ["es2024"],
    "module": "NodeNext",
    "target": "ES2024",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "paths": {
      "#/*": ["./src/*"],
      "#utils/*": ["./src/utils/*"],
      "#types/*": ["./src/types/*"],
      "#libs/*": ["./src/libs/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["./build", "./node_modules"],
  "include": ["./src"]
}
